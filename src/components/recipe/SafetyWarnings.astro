---
interface Props {
  warnings: string[];
  notSafeFor: string[];
}

const { warnings, notSafeFor } = Astro.props;
const hasContent = warnings.length > 0 || notSafeFor.length > 0;
---

{hasContent && (
  <aside class="rounded-lg border border-terracotta/30 bg-terracotta-light/10 dark:bg-terracotta/10 p-4 my-6" role="alert">
    <h3 class="text-sm font-medium text-terracotta dark:text-terracotta-light mb-2 flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
      </svg>
      Safety Notes
    </h3>
    {warnings.length > 0 && (
      <ul class="text-sm text-bark-light dark:text-dark-text/80 space-y-1 mb-2">
        {warnings.map((w) => (
          <li class="flex items-start gap-2">
            <span class="text-terracotta mt-0.5">â€¢</span>
            {w}
          </li>
        ))}
      </ul>
    )}
    {notSafeFor.length > 0 && (
      <p class="text-sm text-bark-light dark:text-dark-text/80">
        <strong class="text-terracotta dark:text-terracotta-light">Do not use on:</strong>{' '}
        {notSafeFor.join(', ')}
      </p>
    )}
  </aside>
)}
