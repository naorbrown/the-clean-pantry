    <circle cx="38" cy="8" r="2" stroke="currentColor" stroke-width="1.5" opacity="0.3" />
    <circle cx="44" cy="14" r="2.5" stroke="currentColor" stroke-width="1.5" opacity="0.35" />
    <path d="M20 38h24" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.3" />
  </svg>
)}

{variant === 'spray' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M26 20v-6h12v6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
    <rect x="22" y="20" width="20" height="36" rx="4" stroke="currentColor" stroke-width="2" />
    <path d="M38 14h8l2-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
    <path d="M50 8l-2 2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.4" />
