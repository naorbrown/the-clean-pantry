)}

{variant === 'drops' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M32 8C32 8 18 28 18 40a14 14 0 0028 0c0-12-14-32-14-32z" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
    <path d="M26 40a6 6 0 006 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.4" />
    <circle cx="44" cy="16" r="3" stroke="currentColor" stroke-width="1.5" opacity="0.3" />
    <circle cx="48" cy="24" r="2" stroke="currentColor" stroke-width="1.5" opacity="0.25" />
    <circle cx="16" cy="20" r="2.5" stroke="currentColor" stroke-width="1.5" opacity="0.25" />
  </svg>
)}
