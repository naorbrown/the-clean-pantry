{variant === 'herbs' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M20 56V32c0-8 4-14 12-18" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
