    <path d="M32 34c4-3 8-2 10 0-2 2-6 3-10 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.5" />
    <path d="M20 46c-3-1-6-1-8 1 2 1 5 2 8 0" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.4" />
    <path d="M44 44c3-1 6 0 7 2-2 1-5 1-7-1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.4" />
  </svg>
)}

{variant === 'mortar' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
