    <circle cx="24" cy="38" r="2" fill="currentColor" opacity="0.2" />
    <circle cx="34" cy="42" r="1.5" fill="currentColor" opacity="0.15" />
    <circle cx="28" cy="46" r="1" fill="currentColor" opacity="0.15" />
