---
interface Props {
  variant: 'leaf' | 'bottle' | 'soap' | 'spray' | 'lemon' | 'herbs' | 'mortar' | 'drops';
  class?: string;
}

const { variant, class: className = '' } = Astro.props;
---

{variant === 'leaf' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M32 8C20 8 10 20 14 36c2 8 8 14 18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
    <path d="M32 8c12 0 22 12 18 28-2 8-8 14-18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
