    <path d="M32 32c-4 2-7 6-8 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.4" />
    <path d="M32 32c4 2 7 6 8 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.4" />
