    <path d="M22 42h20" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.3" />
    <circle cx="32" cy="28" r="2" fill="currentColor" opacity="0.3" />
  </svg>
)}

{variant === 'soap' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect x="12" y="24" width="40" height="28" rx="6" stroke="currentColor" stroke-width="2" />
    <path d="M20 24v-4a4 4 0 014-4h16a4 4 0 014 4v4" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
