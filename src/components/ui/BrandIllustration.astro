    <path d="M50 16l-2-1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.3" />
    <rect x="26" y="28" width="12" height="16" rx="2" stroke="currentColor" stroke-width="1.5" opacity="0.3" />
  </svg>
)}

{variant === 'lemon' && (
  <svg class={className} viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
    <ellipse cx="32" cy="34" rx="18" ry="16" stroke="currentColor" stroke-width="2" />
    <path d="M32 18c-2-4 0-8 2-10 2 2 4 6 2 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
