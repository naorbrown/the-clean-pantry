<header class="border-b border-cream-dark dark:border-dark-surface sticky top-0 bg-cream/95 dark:bg-dark-bg/95 backdrop-blur-sm z-40">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 flex items-center justify-between h-16">
    <!-- Mobile: hamburger -->
    <button
      id="mobile-menu-open"
      type="button"
      class="p-2 -ml-2 rounded-lg text-bark-light dark:text-dark-text/70 hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors md:hidden"
      aria-label="Open menu"
    >
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>

    <!-- Logo -->
    <a href="/" class="font-serif text-lg font-semibold text-bark dark:text-dark-text no-underline hover:text-sage-dark dark:hover:text-sage-light transition-colors">
      The Clean Pantry
    </a>

    <!-- Desktop nav -->
    <nav class="hidden md:flex items-center gap-6 ml-8 flex-1" aria-label="Main navigation">
      <a href="/recipes/" class="text-sm font-medium text-bark-light/70 dark:text-dark-text/60 no-underline hover:text-sage-dark dark:hover:text-sage-light transition-colors">Recipes</a>
      <a href="/guides/" class="text-sm font-medium text-bark-light/70 dark:text-dark-text/60 no-underline hover:text-sage-dark dark:hover:text-sage-light transition-colors">Guides</a>
      <a href="/ingredients/" class="text-sm font-medium text-bark-light/70 dark:text-dark-text/60 no-underline hover:text-sage-dark dark:hover:text-sage-light transition-colors">Ingredients</a>
      <a href="/about/" class="text-sm font-medium text-bark-light/70 dark:text-dark-text/60 no-underline hover:text-sage-dark dark:hover:text-sage-light transition-colors">About</a>
    </nav>

    <!-- Right actions -->
    <div class="flex items-center gap-1">
      <!-- Search -->
      <button
        id="search-open"
        type="button"
        class="p-2 rounded-lg text-bark-light dark:text-dark-text/70 hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors"
        aria-label="Search"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
      </button>

      <!-- Keyboard shortcut hint (desktop only) -->
      <span class="hidden lg:inline-flex items-center gap-0.5 text-[10px] text-bark-light/30 dark:text-dark-text/25 -ml-1 mr-1">
        <kbd class="px-1 py-0.5 bg-cream-dark/80 dark:bg-dark-surface/80 rounded text-[10px]">âŒ˜K</kbd>
      </span>

      <!-- Theme toggle -->
      <button
        id="theme-toggle"
        type="button"
        class="p-2 rounded-lg text-bark-light dark:text-dark-text/70 hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors"
        aria-label="Toggle dark mode"
      >
        <svg class="w-5 h-5 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
        <svg class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  document.getElementById('search-open')?.addEventListener('click', () => {
    (window as any).__openSearch?.();
  });

  document.getElementById('mobile-menu-open')?.addEventListener('click', () => {
    (window as any).__openMobileMenu?.();
  });
</script>
