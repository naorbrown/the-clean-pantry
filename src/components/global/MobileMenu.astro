---
import { getSuperCategories, categoryLabel, url } from '../../lib/utils';

const superCategories = getSuperCategories();
---

<dialog id="mobile-menu" class="mobile-menu fixed inset-0 w-full h-full max-w-none max-h-none m-0 p-0 bg-transparent">
  <div class="fixed inset-y-0 left-0 w-[85vw] max-w-xs bg-cream dark:bg-dark-bg shadow-xl overflow-y-auto">
    <div class="flex items-center justify-between px-5 h-16 border-b border-cream-dark dark:border-dark-surface">
      <a href={url('/')} class="flex items-center gap-2 text-lg font-medium text-bark dark:text-dark-text no-underline">
        <img src={url('/logo.svg')} alt="" class="w-7 h-7" width="28" height="28" />
        The Clean Pantry
      </a>
      <button
        id="mobile-menu-close"
        type="button"
        class="p-2 -mr-2 rounded-lg text-bark-light dark:text-dark-text/70 hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors"
        aria-label="Close menu"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <nav class="px-5 py-4">
      <ul class="space-y-1">
        <li>
          <a href={url('/recipes/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Recipes
          </a>
        </li>
        <li>
          <a href={url('/guides/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Guides
          </a>
        </li>
        <li>
          <a href={url('/ingredients/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Ingredients
          </a>
        </li>
        <li>
          <a href={url('/about/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            About
          </a>
        </li>
      </ul>
    </nav>

    <div class="px-5 py-2">
      <p class="px-3 text-[10px] font-semibold uppercase tracking-wider text-dark-text/30 mb-2">
        Categories
      </p>
      <ul class="space-y-3">
        {superCategories.map((sc) => (
          <li>
            <div class="flex items-center gap-2 px-3 py-1">
              <span class="text-base">{sc.icon}</span>
              <span class="text-xs font-semibold text-dark-text/60">{sc.name}</span>
            </div>
            <ul class="ml-8 space-y-0.5">
              {sc.subcategories.map((slug) => (
                <li>
                  <a
                    href={url(`/categories/${slug}/`)}
                    class="block px-3 py-1.5 rounded-lg text-sm text-dark-text/70 no-underline hover:bg-dark-surface transition-colors"
                  >
                    {categoryLabel(slug)}
                  </a>
                </li>
              ))}
            </ul>
          </li>
        ))}
      </ul>
    </div>

  </div>
</dialog>

<script>
  const dialog = document.getElementById('mobile-menu') as HTMLDialogElement;
  const closeBtn = document.getElementById('mobile-menu-close');
  closeBtn?.addEventListener('click', () => dialog?.close());
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) dialog.close();
  });

  (window as any).__openMobileMenu = () => dialog?.showModal();
</script>
