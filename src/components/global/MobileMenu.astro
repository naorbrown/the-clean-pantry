---
import CategoryIcon from '../ui/CategoryIcon.astro';
import { getCategories, url } from '../../lib/utils';

const categories = getCategories();
---

<dialog id="mobile-menu" class="mobile-menu fixed inset-0 w-full h-full max-w-none max-h-none m-0 p-0 bg-transparent">
  <div class="fixed inset-y-0 left-0 w-[85vw] max-w-xs bg-cream dark:bg-dark-bg shadow-xl overflow-y-auto">
    <div class="flex items-center justify-between px-5 h-16 border-b border-cream-dark dark:border-dark-surface">
      <a href={url('/')} class="font-serif text-lg font-semibold text-bark dark:text-dark-text no-underline">
        The Clean Pantry
      </a>
      <button
        id="mobile-menu-close"
        type="button"
        class="p-2 -mr-2 rounded-lg text-bark-light dark:text-dark-text/70 hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors"
        aria-label="Close menu"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <nav class="px-5 py-4">
      <ul class="space-y-1">
        <li>
          <a href={url('/recipes/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Recipes
          </a>
        </li>
        <li>
          <a href={url('/guides/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Guides
          </a>
        </li>
        <li>
          <a href={url('/ingredients/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Ingredients
          </a>
        </li>
        <li>
          <a href={url('/categories/')} class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-bark dark:text-dark-text no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors">
            Categories
          </a>
        </li>
      </ul>
    </nav>

    <div class="px-5 py-2">
      <p class="px-3 text-[10px] font-semibold uppercase tracking-wider text-bark-light/40 dark:text-dark-text/30 mb-2">
        Categories
      </p>
      <ul class="space-y-0.5">
        {categories.map((cat) => (
          <li>
            <a
              href={url(`/categories/${cat.slug}/`)}
              class="flex items-center gap-3 px-3 py-2 rounded-lg text-sm text-bark-light dark:text-dark-text/70 no-underline hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors"
            >
              <CategoryIcon slug={cat.slug} size="sm" class="text-bark-light/40 dark:text-dark-text/40" />
              {cat.name}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div class="px-5 py-4 border-t border-cream-dark dark:border-dark-surface mt-2">
      <button
        id="mobile-theme-toggle"
        type="button"
        class="flex items-center gap-3 w-full px-3 py-2.5 rounded-lg text-sm font-medium text-bark-light dark:text-dark-text/70 hover:bg-cream-dark dark:hover:bg-dark-surface transition-colors"
      >
        <svg class="w-4 h-4 dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
        </svg>
        <svg class="w-4 h-4 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
        </svg>
        Toggle dark mode
      </button>
    </div>
  </div>
</dialog>

<script>
  const dialog = document.getElementById('mobile-menu') as HTMLDialogElement;
  const closeBtn = document.getElementById('mobile-menu-close');
  const themeBtn = document.getElementById('mobile-theme-toggle');

  closeBtn?.addEventListener('click', () => dialog?.close());
  dialog?.addEventListener('click', (e) => {
    if (e.target === dialog) dialog.close();
  });

  themeBtn?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  (window as any).__openMobileMenu = () => dialog?.showModal();
</script>
